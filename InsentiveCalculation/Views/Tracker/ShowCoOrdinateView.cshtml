@section Scripts {
    <script type="text/javascript">
        getAllPendingCapex();
    function getAllPendingCapex() {
            var urlpath = '@Url.Action("ShowPartialView", "Tracker")';
            $.ajax({
                url: urlpath,
                type: "Post",
                data: {},
                    async: true,
                    success: function(data) {
                        if (data) {
                            $('#showtracker').empty();
                            $('#showtracker').html(data);
                            $("#showtrackerTable").DataTable();
                        }
                    }
                });
        }
    </script>
