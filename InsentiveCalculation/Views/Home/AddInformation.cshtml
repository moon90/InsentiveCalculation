
@{
    ViewBag.Title = "AddInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 style="text-align:center;"><b>Add Information</b></h2>
    <div class="row">
        <div class="sidebar" style="width:20%;float:left">
            <ul class="nav">
                <li><a href="#" onclick="changeDiv(0)">Add New Style<span style="color:red;" id="pending_Capex"></span></a></li>
                <li><a href="#" onclick="changeDiv(1)">Add New Operation</a></li>
                <li><a href="#" onclick="changeDiv(2)">Add New Section</a></li>
                <li><a href="#" onclick="changeDiv(3)">Add Operation To style</a></li>
            </ul>
        </div>
        <div style="text-align:center;width:80%;float:right">
            <div id="genarate_dashboard"> </div>
        </div>
    </div>
</div>
<script>
    function changeDiv(status) {
        var urlpath = '@Url.Action("ChangeDivView", "Home")';
            $.ajax({
                url: urlpath,
                type: "Post",
                data: {status:status},
                    async: true,
                    success: function(data) {
                        if (data) {
                            $('#genarate_dashboard').empty();
                            $('#genarate_dashboard').html(data);
                        }
                    }
                });
    }
</script>


